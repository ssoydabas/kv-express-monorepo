{
  "include": ["src/**/*"],

  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",

    "outDir": "dist",

    "baseUrl": ".",

    "paths": {},

    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
