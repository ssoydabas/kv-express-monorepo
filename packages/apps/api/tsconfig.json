{
  "include": ["types.ts", "src/**/*", "bin/**/*"],

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",

    "baseUrl": ".",

    "paths": {
      "~api/*": ["./src/api/*"],
      "~api-root/*": ["./src/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
